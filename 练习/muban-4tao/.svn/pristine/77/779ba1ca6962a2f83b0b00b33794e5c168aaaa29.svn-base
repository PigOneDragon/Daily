.m-top{
    position: relative;
}
.m-top .pic{ 
    height: 280px;
    overflow: hidden;
}
.m-top .pic img{
    display: block;
    width: 100%;
    height: 100%;
}
.m-top .txt{
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
    -ms-transform: translate(-50%,-50%);
    -o-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    text-align: center;
    line-height: 28px; 
    color:  #ffffff;
}
.m-top .txt h3{
    font-size: 24px;
    margin-bottom: 14px;  
}
.m-top .txt span{
    display: block;
    font-size: 14px;
}
.m-list_b{
    margin: 40px 0 80px;
    overflow: hidden;
}
.m-list_b .col-l{
    width: 240px;
    margin-right: 30px;
}
.ul-txt dt{
    font-size: 24px;
    line-height: 74px;
    background-color: #333333;
    text-align: center;
    font-weight: bold;
    color: #fff;
}
.ul-txt dd a{
    display: block;
    padding: 0 30px 0 40px;
    background-color: #ececec;
    line-height: 55px;
    font-size: 14px;
    color: #333333;
    margin-top: 1px;
}
.ul-txt dd a span{
    float: right;
    width: 8px;
    height: 55px;
    background: url(../images/txtr1.png) no-repeat center;
}
.ul-txt .on a{
    background-color: #c80003;
    color: #fff;
}
.ul-txt .on a span{
    background-image: url(../images/txtr2.png);
}
/* 客服电话 */
.m-kftel{
    margin-top: 20px;
}
.m-kftel .pic{
    height: 170px;
}
.m-kftel .pic img{
    display: block;
    width: 100%;
    height: 100%;
}
.m-kftel .txt{
    background-color: #c80003;
    text-align: center;
    color: #fff;
    font-size: 28px;
    padding: 20px 5px;
    overflow: hidden;
}
.m-kftel .txt span{
    display: block;
    font-size: 14px;
    line-height: 27px;
}
.m-kftel .txt span i{
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 27px;
    height: 27px;
    background-position: center;
    background-repeat: no-repeat;
}
.m-list_b .col-r{
    float: none;
    width: auto;
    overflow: hidden;
}
.m-info{
    font-size: 14px;
    color: #000000;
    line-height: 2.14em;
    text-indent: 2em;
}
.m-info h3{
    font-size: 24px;
    line-height: 28px;
    text-indent: 0;
    border-bottom: 2px solid #cccccc;
    padding-bottom: 16px;
    padding-top: 22px;
    margin-bottom: 14px;
}
/* main增加id=“full”时，左侧隐藏，右侧全屏 */
.main#full .m-list_b .col-l{
    display: none;
}





